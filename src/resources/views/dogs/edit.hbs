<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <h3 class="text-center mb-4">Chỉnh sửa thông tin chó</h3>
            <form method="post" action="/dog/{{Dog._id}}?_method=put">
                <div class="form-group">
                    <label for="name">Tên chó</label>
                    <input type="text" class="form-control" value="{{Dog.name}}" id="name" placeholder="Nhập tên chó" name="name" required>
                </div>
                <div class="form-group">
                    <label for="image">Ảnh</label>
                    <input type="text" class="form-control" value="{{Dog.image}}" id="image" placeholder="Nhập link ảnh" name="image" required>
                </div>
                <div class="form-group">
                    <label for="note">Giới thiệu</label>
                    <input type="text" class="form-control" value="{{Dog.note}}" id="note" placeholder="Nhập giới thiệu" name="note" required>
                </div>
                <div class="form-group">
                    <label for="description">Thông tin chi tiết</label>
                    <textarea class="form-control" id="description" placeholder="Nhập thông tin chi tiết" name="description" rows="4" required>{{Dog.description}}</textarea>
                </div>
                <button type="submit" class="btn btn-primary">Lưu lại</button>
            </form>
        </div>
    </div>
</div>
